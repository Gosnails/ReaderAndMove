/* pages/welcome/welcome.wxss */
page {
  height: 100%;
  background-color: #b3d4db;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #b3d4db;
}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
}
.user-name {
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.moto-container {
  width: 200rpx;
  height: 80rpx;
  margin-top: 200rpx;
  text-align: center;
  border-radius: 5px;
  border: 1px solid #405f80;
  
}
.moto {
  line-height: 80rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
}